<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:OpenIPC_Configurator.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OpenIPC_Configurator.Views.MainView"
             x:DataType="vm:MainViewModel">
  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
    <vm:MainViewModel />
  </Design.DataContext>
    <Grid  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ExperimentalAcrylicBorder Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial TintColor="Black" MaterialOpacity="0.85" TintOpacity="1" />
            </ExperimentalAcrylicBorder.Material>

        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBox Margin="5" Name="txtIP"  Width="124" Height="23"  Text="{Binding IPAddress}"/>
            <Button Margin="5" Name="btnGet" Command="{Binding ConnectCommand}" Content="Fetch"/>
        <Button Margin="5" Name="btnSend" Content="Upload"/>
            
        </StackPanel>
            </ExperimentalAcrylicBorder>
        <ExperimentalAcrylicBorder Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial TintColor="#222222" MaterialOpacity="0.85" TintOpacity="1" />
            </ExperimentalAcrylicBorder.Material>

        <TabControl Grid.Row="1" Name="TabControl1">
            <TabItem Header="WFB Settings">
                <StackPanel>
                    <!-- <StackPanel Margin="5"> -->
                    <!--     <Label Content="Frequency:"/> -->
                    <!--     <TextBox Name="txtFreq" HorizontalAlignment="Left" VerticalAlignment="Top" Width="191" Height="23"/> -->
                    <!-- </StackPanel> -->
                    <!-- <StackPanel Margin="5"> -->
                    <!--     <Label Content="Power 24:"/> -->
                    <!--     <TextBox Name="txtPower24" HorizontalAlignment="Left" VerticalAlignment="Top" Width="191" Height="23"/> -->
                    <!-- </StackPanel> -->
                    <!-- <StackPanel Margin="5"> -->
                    <!--     <Label Content="FECN:"/> -->
                    <!--     <TextBox Name="txtFECN" HorizontalAlignment="Left" VerticalAlignment="Top" Width="191" Height="23"/> -->
                    <!-- </StackPanel> -->
                    <!-- <StackPanel Margin="5"> -->
                    <!--     <Label Content="MCS:"/> -->
                    <!--     <TextBox Name="txtMCS" HorizontalAlignment="Left" VerticalAlignment="Top" Width="191" Height="23"/> -->
                    <!-- </StackPanel> -->
                    <!-- <StackPanel Margin="5"> -->
                    <!--     <Label Content="FECK:"/> -->
                    <!--     <TextBox Name="txtFECK" HorizontalAlignment="Left" VerticalAlignment="Top" Width="191" Height="23"/> -->
                    <!-- </StackPanel> -->
                    <!-- <StackPanel Margin="5"> -->
                    <!--     <Label Content="Frequency 24:"/> -->
                    <!--     <TextBox Name="txtFreq24" HorizontalAlignment="Left" VerticalAlignment="Top" Width="191" Height="23"/> -->
                    <!-- </StackPanel> -->
                    <!-- <StackPanel Margin="5"> -->
                    <!--     <Label Content="LDPC:"/> -->
                    <!--     <TextBox Name="txtLDPC" HorizontalAlignment="Left" VerticalAlignment="Top" Width="191" Height="23"/> -->
                    <!-- </StackPanel> -->
                    <!-- <StackPanel Margin="5"> -->
                    <!--     <Label Content="STBC:"/> -->
                    <!--     <TextBox Name="txtSTBC" HorizontalAlignment="Left" VerticalAlignment="Top" Width="191" Height="23"/> -->
                    <!-- </StackPanel> -->
                </StackPanel>
            </TabItem>
            <TabItem Header="Camera Settings">
                <ScrollViewer Height="500">
                    <StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Resolution:"/>
                        <ComboBox SelectedValue="{Binding MajesticConfig.Mjpeg.Size}" Name="txtResolution" HorizontalAlignment="Left" VerticalAlignment="Top" Width="161" Height="23">
                            <ComboBoxItem>1280x720</ComboBoxItem>
                            <ComboBoxItem>1920x1080</ComboBoxItem>
                            <ComboBoxItem>3200x1800</ComboBoxItem>
                            <ComboBoxItem>3840x2160</ComboBoxItem>
                            </ComboBox>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Sensor:"/>
                        <TextBox Name="txtSensor" HorizontalAlignment="Left" VerticalAlignment="Top" Width="266" Height="23"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="FPS:"/>
                        <TextBox Name="txtFPS" HorizontalAlignment="Left" VerticalAlignment="Top" Width="161" Height="23"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Luminance:"/>
                        <TextBox Name="txtLuminance" HorizontalAlignment="Left" VerticalAlignment="Top" Width="161" Height="23"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Encode:"/>
                        <TextBox Name="txtEncode" HorizontalAlignment="Left" VerticalAlignment="Top" Width="161" Height="23"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Saturation:"/>
                        <NumericUpDown Value="{Binding MajesticConfig.Image.Saturation}" Name="txtSaturation" HorizontalAlignment="Left" VerticalAlignment="Top" Width="161" Height="23"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Bitrate:"/>
                        <TextBox Name="txtBitrate" HorizontalAlignment="Left" VerticalAlignment="Top" Width="161" Height="23"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Hue:"/>
                        <NumericUpDown Increment="10" Maximum="100" Minimum="0" Value="{Binding MajesticConfig.Image.Hue}" Name="txtHue" HorizontalAlignment="Left" VerticalAlignment="Top" Width="161" Height="23"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Exposure:"/>
                        <NumericUpDown Increment="10" Maximum="100" Minimum="0" Name="txtExposure" HorizontalAlignment="Left" VerticalAlignment="Top" Width="161" Height="23"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Contrast:"/>
                        <NumericUpDown Increment="10" Maximum="100" Minimum="0" Value="{Binding MajesticConfig.Image.Contrast}" Name="txtContrast" HorizontalAlignment="Left" VerticalAlignment="Top" Width="161" Height="23"/>
                    </StackPanel>
                        </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        </ExperimentalAcrylicBorder>
    </Grid>
        
</UserControl>
