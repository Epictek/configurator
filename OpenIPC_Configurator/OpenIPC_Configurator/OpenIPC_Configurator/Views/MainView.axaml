            <TabItem  Header="Camera Settings">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Resolution:"/>
                        <ComboBox ItemsSource="{Binding Resolutions}" HorizontalAlignment="Stretch" SelectedValue="{Binding MajesticConfig.Video0.Size, Mode=TwoWay}" Name="txtResolution" >
                        </ComboBox>
                    </StackPanel>
                    <!-- <StackPanel Margin="5"> -->
                    <!--     <Label Content="Sensor:"/> -->
                    <!--     <TextBox Name="txtSensor" Text="{Binding MajesticConfig.Video0}"/> -->
                    <!-- </StackPanel> -->
                    <StackPanel Margin="5">
                        <Label Content="FPS:"/>
                        <NumericUpDown Increment="10" Maximum="120" Minimum="20" Value="{Binding MajesticConfig.Video0.Fps}"  />
                    </StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Luminance:"/>
                        <NumericUpDown Increment="10" Maximum="100" Minimum="0" Value="{Binding MajesticConfig.Image.Luminance}" />
                    </StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Encode:"/>
                        <ComboBox ItemsSource="{Binding Codecs}" HorizontalAlignment="Stretch" SelectedValue="{Binding MajesticConfig.Video0.Codec, Mode=TwoWay}">
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Saturation:"/>
                        <NumericUpDown Value="{Binding MajesticConfig.Image.Saturation}" Name="txtSaturation"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Bitrate:"/>
                        <ComboBox ItemsSource="{Binding BitRates}" SelectedValue="{Binding MajesticConfig.Video0.Bitrate, Mode=TwoWay}" HorizontalAlignment="Stretch">
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Hue:"/>
                        <NumericUpDown Increment="10" Maximum="100" Minimum="0" Value="{Binding MajesticConfig.Image.Hue}"/>
                    </StackPanel>
