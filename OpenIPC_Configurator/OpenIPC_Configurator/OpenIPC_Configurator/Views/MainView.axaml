                    <StackPanel Margin="5">
                        <Label Content="Contrast:"/>
                        <NumericUpDown Increment="10" Maximum="100" Minimum="0" Value="{Binding MajesticConfig.Image.Contrast}" Name="txtContrast"  />
                    </StackPanel>
                        </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        </ExperimentalAcrylicBorder>
    </Grid>
        
