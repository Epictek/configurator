            <TabItem Header="Camera Settings">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Resolution:"/>
                        <ComboBox HorizontalAlignment="Stretch" SelectedValue="{Binding MajesticConfig.Video0.Size}" Name="txtResolution" >
                            <ComboBoxItem>1280x720</ComboBoxItem>
                            <ComboBoxItem>1920x1080</ComboBoxItem>
                            <ComboBoxItem>3200x1800</ComboBoxItem>
                            <ComboBoxItem>3840x2160</ComboBoxItem>
                            </ComboBox>
                    </StackPanel>
                    <!-- <StackPanel Margin="5"> -->
                    <!--     <Label Content="Sensor:"/> -->
                    <!--     <TextBox Name="txtSensor" Text="{Binding MajesticConfig.Video0}"/> -->
                    <!-- </StackPanel> -->
                    <StackPanel Margin="5">
                        <Label Content="FPS:"/>
                        <NumericUpDown Increment="10" Maximum="120" Minimum="20" Value="{Binding MajesticConfig.Video0.Fps}"  />
                    </StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Luminance:"/>
                        <NumericUpDown Increment="10" Maximum="100" Minimum="0" Value="{Binding MajesticConfig.Image.Luminance}" />
                    </StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Encode:"/>
                        <ComboBox HorizontalAlignment="Stretch" Name="cmbCodec" SelectedValue="{Binding MajesticConfig.Video0.Codec}">
                            <ComboBoxItem Content="h264"/>
                            <ComboBoxItem Content="h265"/>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Saturation:"/>
                        <NumericUpDown Value="{Binding MajesticConfig.Image.Saturation}" Name="txtSaturation"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Bitrate:"/>
                        <ComboBox SelectedValueBinding="Content" SelectedItem="{Binding MajesticConfig.Video0.Bitrate, Mode=TwoWay}" HorizontalAlignment="Stretch">
                            <ComboBoxItem Content="1024" />
                            <ComboBoxItem Content="2048"/>
                            <ComboBoxItem Content="3072"/>
                            <ComboBoxItem Content="4096"/>
                            <ComboBoxItem Content="5120"/>
                            <ComboBoxItem Content="6144"/>
                            <ComboBoxItem Content="7168"/>
                            <ComboBoxItem Content="8192"/>
                            <ComboBoxItem Content="9216"/>
                            <ComboBoxItem Content="10240"/>
                            <ComboBoxItem Content="11264"/>
                            <ComboBoxItem Content="12288"/>
                            <ComboBoxItem Content="13312"/>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Hue:"/>
                        <NumericUpDown Increment="10" Maximum="100" Minimum="0" Value="{Binding MajesticConfig.Image.Hue}" Name="txtHue"/>
                    </StackPanel>
                    <!-- <StackPanel Margin="5"> -->
                    <!--     <Label Content="Exposure:"/> -->
